pipeline {
    agent any

    environment {
        // Define environment variables
        EC2_USER = 'ubuntu'                        // EC2 username
        EC2_HOST = '52.20.211.65'                  // EC2 instance IP
        APP_PORT = '8080'                          // Application port
        SSH_KEY_CREDENTIALS_ID = 'jenkins_ssh_key' // ID of the SSH key stored in Jenkins credentials
        APP_JAR_NAME = 'spring-boot-starter-parent 3.1.2.jar' // Correct JAR file name (adjust if different)
        IMAGE_NAME = 'spring-boot-app'             // Docker image name
        IMAGE_TAG = 'latest'                       // Docker image tag
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id') // AWS Access Key ID
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key') // AWS Secret Access Key

        // Set JAVA_HOME to the correct Java 17 path
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        MAVEN_HOME = '/usr/share/maven'
        PATH = "${JAVA_HOME}/bin:${MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', 
                    credentialsId: 'github_credentials', 
                    url: 'https://github.com/Kem123123/oauth-service.git'  // Update this to your repository
            }
        }

        stage('Build Application') {
            steps {
                // Build the application with Maven, skipping tests for faster builds
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                // Archive the JAR file to make it available for other stages if needed
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy to EC2') {
            steps {
                // Configure AWS CLI with the access keys
                sh """
                aws configure set aws_access_key_id ${AWS_ACCESS_KEY_ID}
                aws configure set aws_secret_access_key ${AWS_SECRET_ACCESS_KEY}
                aws configure set default.region us-east-1  // Set your region or remove if not needed
                """

                // Option 1: If you want to deploy the JAR directly (without Docker)
                sh """
                scp -o StrictHostKeyChecking=no -i ~/.ssh/${SSH_KEY_CREDENTIALS_ID} target/${APP_JAR_NAME} ${EC2_USER}@${EC2_HOST}:/home/ubuntu/${APP_JAR_NAME}
                ssh -o StrictHostKeyChecking=no -i ~/.ssh/${SSH_KEY_CREDENTIALS_ID} ${EC2_USER}@${EC2_HOST} "nohup java -jar /home/ubuntu/${APP_JAR_NAME} > /dev/null 2>&1 &"
                """

                // Option 2: If you're deploying via Docker
                sh """
                scp -o StrictHostKeyChecking=no -i ~/.ssh/${SSH_KEY_CREDENTIALS_ID} target/${APP_JAR_NAME} ${EC2_USER}@${EC2_HOST}:/home/ubuntu/${APP_JAR_NAME}
                ssh -o StrictHostKeyChecking=no -i ~/.ssh/${SSH_KEY_CREDENTIALS_ID} ${EC2_USER}@${EC2_HOST} "docker stop ${IMAGE_NAME} || true && docker rm ${IMAGE_NAME} || true && docker run -d -p ${APP_PORT}:${APP_PORT} --name ${IMAGE_NAME} ${IMAGE_NAME}:${IMAGE_TAG}"
                """
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
